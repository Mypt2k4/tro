<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo hợp đồng"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/edt_TenKhachThue_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tên Khách Thuê"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />



    <TextView
        android:id="@+id/edt_SoPhong_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Số Phòng"
        android:gravity="fill_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_conor_10_border_gary"/>

    <EditText
        android:textSize="16sp"
        android:id="@+id/edt_NgayBatDau_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ngày Bắt đầu"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_NgayKetThuc_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ngày hết hạn"
        android:textSize="16sp"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_SoNguoi_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số người"
        android:textSize="16sp"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_SoLuongXe_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số lượng xe"
        android:textSize="16sp"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_TienCoc_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tiền cọc"
        android:textSize="16sp"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/edt_TrangThai_HopDong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Trạng Thái"
        android:textSize="16sp"
        android:background="#D4B2F1"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Tao_HopDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_conor_10_border_gary"
            android:text="Tạo"
             />
        <Button
            android:id="@+id/btn_huy_HopDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_conor_10_border_gary"
            android:text="hủy"
            />

    </LinearLayout>

</LinearLayout>