<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15sp"
            android:text="Chi Tiết Phòng"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:text="số phòng: " />

                <EditText
                    android:id="@+id/ed_soPhong"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#34000000"
                    android:hint="201"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="start"
                    android:text="Giá Phòng: "
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/ed_giaPhong"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#34000000"
                    android:hint="201"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="start"
                    android:text="Giá Điện: "
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/ed_giaDient"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#34000000"
                    android:hint="201"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:text="Giá Wifi: " />

                <EditText
                    android:id="@+id/ed_wifiPhong"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#34000000"
                    android:hint="201"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:text="Tinh Trạng: " />

                <EditText
                    android:id="@+id/ed_trinhTrang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Đang cho thuê"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>