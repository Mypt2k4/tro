<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Số hóa đơn: 0"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/txtsl"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:gravity="center"
            android:padding="15sp"
            android:text="Doanh Thu Tháng"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:cornerRadius="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="start"
            android:text="Chọn Tháng"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <Spinner
            android:id="@+id/id_spinner_thang"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="start"
            android:text="Chọn Năm"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <Spinner
            android:id="@+id/id_spinner_nam"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Spinner>

        <Button
            android:id="@+id/btn_xemDTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="#FFEB3B"
            android:text="Xem"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdoanhthu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doanh thu Tháng:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <ListView
            android:id="@+id/listDoanhThuThang"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>