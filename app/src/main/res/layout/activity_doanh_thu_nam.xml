<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Số hóa đơn: 0"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/txtsl"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FD5151"
            android:gravity="center"
            android:padding="15sp"
            android:text="Doanh Thu Năm"
            android:textColor="@color/colorDividerView"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="start"
            android:text="Chọn Năm"
            android:textColor="#F32F2F"
            android:textStyle="bold|italic" />
        <Spinner
            android:id="@+id/id_spinner_namDt"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </Spinner>


        <Button
            android:id="@+id/btn_xemDTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/black"
            android:text="Xem" />

        <TextView
            android:id="@+id/tvdoanhthu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doanh thu theo Năm:"
            android:textColor="#DA0000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <ListView
            android:id="@+id/listDoanhThunam"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>